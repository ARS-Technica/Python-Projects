import tkinter as tk
from tkinter import font, ttk, Button

def open_font_dialog():
    def apply_font():
        font_family = family_var.get()
        font_size = size_var.get()
        font_weight = weight_var.get()
        font_style = style_var.get()

        selected_font = font.Font(family=font_family, size=font_size, weight=font_weight, slant=font_style)
        sample_label.config(font=selected_font)

    font_dialog = tk.Toplevel(root)
    font_dialog.title("Font Settings")

    # Font Family
    family_label = tk.Label(font_dialog, text="Font Family:")
    family_label.grid(row=0, column=0)
    family_var = tk.StringVar(value="Arial")
    family_options = font.families()
    family_dropdown = ttk.Combobox(font_dialog, textvariable=family_var, values=family_options)
    family_dropdown.grid(row=0, column=1)

    # Font Size
    size_label = tk.Label(font_dialog, text="Font Size:")
    size_label.grid(row=1, column=0)
    size_var = tk.IntVar(value=12)
    size_spinbox = tk.Spinbox(font_dialog, from_=8, to=72, textvariable=size_var)
    size_spinbox.grid(row=1, column=1)

    # Font Weight
    weight_label = tk.Label(font_dialog, text="Font Weight:")
    weight_label.grid(row=2, column=0)
    weight_var = tk.StringVar(value="normal")
    weight_options = ["normal", "bold"]
    weight_dropdown = ttk.Combobox(font_dialog, textvariable=weight_var, values=weight_options)
    weight_dropdown.grid(row=2, column=1)

    # Font Style
    style_label = tk.Label(font_dialog, text="Font Style:")
    style_label.grid(row=3, column=0)
    style_var = tk.StringVar(value="roman")
    style_options = ["roman", "italic"]
    style_dropdown = ttk.Combobox(font_dialog, textvariable=style_var, values=style_options)
    style_dropdown.grid(row=3, column=1)

    # Sample Label
    sample_label = tk.Label(font_dialog, text="Sample Text")
    sample_label.grid(row=4, column=0, columnspan=2)

    # Apply Button
    apply_button = tk.Button(font_dialog, text="Apply", command=apply_font)
    apply_button.grid(row=5, column=0, columnspan=2)

root = tk.Tk()
root.title("Main Window")

open_font_button = tk.Button(root, text="Open Font Dialog", command=open_font_dialog)
open_font_button.pack()

root.mainloop()
