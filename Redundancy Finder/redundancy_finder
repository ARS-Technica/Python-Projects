"""
Placed function into a Class 
"""


class FuzzySearch:
    def word_search(self, word):
        # Open the file to be searched
        with open('filename.txt', 'r') as file:
            # Read the file line by line
            for line in file:
                # Check if the string is in the line
                if word in line:
                    # If the word is found, print the line
                    print(line)


if __name__ == '__main__':
    FuzzySearch().word_search(word = 'word')

