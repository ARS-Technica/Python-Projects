"""
Placed code into a function
Changed 'word' to a variable
"""


def word_search(word):
    # Open the file to be searched
    with open('filename.txt', 'r') as file:
        # Read the file line by line
        for line in file:
            # Check if the string is in the line
            if word in line:
                # If the word is found, print the line
                print(line)


if __name__ == '__main__':
    word_search('word')

