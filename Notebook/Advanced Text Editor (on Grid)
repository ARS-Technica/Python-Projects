    pass

# Select All Text
def select_all(e):
    # Add sel tag to select all text
    text.tag_add('sel', '1.0', 'end')

# Clear All Text
def clear_all(e):
    text.delete(1.0, END)
    # Delete function doesn't require quotation marks


