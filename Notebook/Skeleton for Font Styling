def on_enter(event, str):
	status.configure(text=str)

def on_leave(event):
	status.configure(text="")

bold_button.bind("<Enter>", lambda event , str="Bold, Command - Ctrl+B":on_enter(event , str))
bold_button.bind("<Leave>", on_leave)

