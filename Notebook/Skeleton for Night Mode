active_color_scheme = None
checkbutton_vars = {}

def checkbutton_selected(scheme_name):
    global active_color_scheme
    var = checkbutton_vars[scheme_name]
    
    if scheme_name == "Choose Custom Palette":
        # Deactivate all other color schemes and Dark Mode
        for name, value in checkbutton_vars.items():
            if name != scheme_name:
                value.set(False)
        if custom_palette_var.get():
            set_custom_color()
        else:
            active_color_scheme = None  # Deactivate custom palette, reset active_color_scheme
            update_text_widget_color()  # Restore the appropriate background color
    else:
        if var.get():
            custom_palette_var.set(False)  # Deactivate "Choose Custom Palette"

            for name, value in checkbutton_vars.items():
                if name != scheme_name and name != "Choose Custom Palette":
                    value.set(False)
            if scheme_name == "Dark Mode":
                text_widget.config(bg=night_mode_scheme["Night Mode"]["second_color"])  # Set text widget background to gray
            else:
                text_widget.config(bg=color_schemes[scheme_name]["second_color"])

            active_color_scheme = None  # Deactivate custom palette, reset active_color_scheme
        else:
            var.set(False)
            update_text_widget_color()

'''
def update_text_widget_color():
    active_scheme_names = [name for name, var in checkbutton_vars.items() if var.get()]

    if custom_palette_var.get() and active_color_scheme:
        text_widget.config(bg=active_color_scheme)
    elif dark_mode_var.get():
        text_widget.config(bg=night_mode_scheme["Night Mode"]["second_color"])
    elif not active_scheme_names:
        text_widget.config(bg=default_color_scheme["Default"]["second_color"])
    else:
        active_color = None
        for name in active_scheme_names:
            if name in color_schemes:
                active_color = color_schemes[name]["second_color"]
                break

        if active_color:
            text_widget.config(bg=active_color)
        else:
            text_widget.config(bg=default_color_scheme["Default"]["second_color"])
'''

def update_text_widget_color():
    active_scheme_names = [name for name, var in checkbutton_vars.items() if var.get()]

    if custom_palette_var.get() and active_color_scheme:
        for element, properties in gui_elements_colors.items():
            if isinstance(properties, tuple):
                for prop in properties:
                    element[prop] = active_color_scheme
            else:
                element[properties] = active_color_scheme
    elif dark_mode_var.get():
        for element, properties in gui_elements_colors.items():
            if isinstance(properties, tuple):
                for prop in properties:
                    element[prop] = night_mode_scheme["Night Mode"]["second_color"]
            else:
                element[properties] = night_mode_scheme["Night Mode"]["second_color"]
    elif not active_scheme_names:
        for element, properties in gui_elements_colors.items():
            if isinstance(properties, tuple):
                for prop in properties:
                    element[prop] = default_color_scheme["Default"]["second_color"]
            else:
                element[properties] = default_color_scheme["Default"]["second_color"]
    else:
        active_color = None
        for name in active_scheme_names:
            if name in color_schemes:
                active_color = color_schemes[name]["second_color"]
                break

        if active_color:
            for element, properties in gui_elements_colors.items():
                if isinstance(properties, tuple):
                    for prop in properties:
                        element[prop] = active_color
                else:
                    element[properties] = active_color
        else:
            for element, properties in gui_elements_colors.items():
                if isinstance(properties, tuple):
                    for prop in properties:
                        element[prop] = default_color_scheme["Default"]["second_color"]
                else:
                    element[properties] = default_color_scheme["Default"]["second_color"]

def choose_custom_palette(*args):
    global active_color_scheme

    if custom_palette_var.get():
        chosen_color = colorchooser.askcolor(title="Choose Custom Palette")[1]

        if chosen_color:
            active_color_scheme = chosen_color
            if dark_mode_var.get():
                text_widget.config(bg=chosen_color)
            else:
                update_text_widget_color()  # Use the active color scheme
    else:
        if active_color_scheme and custom_palette_var.get() == 0:
            if dark_mode_var.get():
                text_widget.config(bg=night_mode_scheme["Night Mode"]["second_color"])  # Restore night mode color
            else:
                update_text_widget_color()  # Restore the appropriate background color
            active_color_scheme = None

'''
def apply_color_scheme(scheme_name):
    global last_color_scheme, color_scheme_var, color_schemes

    # Check if the color scheme is already set to "Default"
    if scheme_name == "Default":
        # If it is, revert to the "Default" color scheme
        last_color_scheme = "Default"
        scheme = color_schemes["Default"]
    else:
        # Otherwise, apply the selected color scheme
        scheme = color_schemes.get(scheme_name)

    if scheme is not None:
        # Set the value of night_mode_var based on the scheme_name
        night_mode_var.set(scheme_name == "Night Mode")

        main_color = scheme["main_color"]
        second_color = scheme["second_color"]
        selection_highlight = scheme["selection_highlight"]
        text_color = scheme["text_color"]

