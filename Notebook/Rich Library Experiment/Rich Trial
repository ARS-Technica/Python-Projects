"""
Rich is a library that allows text to be formatted bold, 
italic, and underline simultaneously in a console.

This is a test to seel if I can get it to work in a GUI.
"""

import tkinter as tk
from rich.text import Text
from rich.console import Console

def update_text_widget():
    text_widget.delete("1.0", tk.END)
    text_widget.insert(tk.END, text.plain)

def update_rich_text():
    text.stylize("bold italic underline")
    update_text_widget()

def apply_bold():
    text.stylize("bold")
    update_text_widget()

def apply_italic():
    text.stylize("italic")
    update_text_widget()

def apply_underline():
    text.stylize("underline")
    update_text_widget()

root = tk.Tk()
root.title("Rich Text Editor")

console = Console()
text = Text("Editable rich text")
text_widget = tk.Text(root, wrap="word")
text_widget.pack(fill="both", expand=True)

bold_button = tk.Button(root, text="Bold", command=apply_bold)
bold_button.pack(side="left", padx=5, pady=5)

italic_button = tk.Button(root, text="Italic", command=apply_italic)
italic_button.pack(side="left", padx=5, pady=5)

underline_button = tk.Button(root, text="Underline", command=apply_underline)
underline_button.pack(side="left", padx=5, pady=5)

update_text_widget()

root.mainloop()

